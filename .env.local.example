# Local development configuration - fully local services
# Copy this to .env and update values as needed

# PostgreSQL (local)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/railway_app_dev

# Phoenix configuration (local)
MIX_ENV=dev
PHX_HOST=localhost
PORT=4000

# Secret key base for local development
SECRET_KEY_BASE=RailwayAppLocalDevSecretKeyBaseChangeThisInProduction

# Required: External LLM APIs (OpenAI is required)
LLM_DEFAULT_PROVIDER=openai
OPENAI_API_KEY=your_openai_key_here

# Optional: Additional LLM providers
# ANTHROPIC_API_KEY=your_anthropic_key_here

# Optional: Slack integration (uncomment if needed locally)
# SLACK_BOT_TOKEN=your_slack_bot_token
# SLACK_SIGNING_SECRET=your_slack_signing_secret
# SLACK_CHANNEL_ID=your_slack_channel_id
